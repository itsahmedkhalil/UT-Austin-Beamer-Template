% Constants
\definecolor{utorange}{RGB}{191, 87, 0}
\definecolor{utblack}{RGB}{51, 63, 72}
\definecolor{uttangerine}{RGB}{248, 151, 31}
\definecolor{cffffff}{RGB}{255,255,255}
\definecolor{utlimestone}{RGB}{214, 210, 196}
\definecolor{utsunshine}{RGB}{255, 214, 0}

\newcommand{\progressbar}{1pt}

% Captions
\captionsetup[figure]{labelfont={bf,color=utblack}}
\captionsetup[table]{labelfont={bf,color=utblack}}

% Progress Bar
\makeatletter
\setlength{\metropolis@titleseparator@linewidth}{\progressbar}
\setlength{\metropolis@progressonsectionpage@linewidth}{\progressbar}
\setlength{\metropolis@progressinheadfoot@linewidth}{\progressbar}
\makeatother

% Slide colors
\setbeamercolor{alerted text}{fg=utorange}
\setbeamercolor{example text}{fg=utorange}
\setbeamercolor{palette primary}{bg=utorange}
\setbeamercolor{bibliography entry location}{fg=utorange}
\setbeamercolor{frametitle}{bg=utorange, fg=cffffff}
\setbeamercolor{progress bar}{fg=utorange,bg=utsunshine}
\setbeamercolor{background canvas}{bg=white}

\setbeamertemplate{frame footer}{\insertshortauthor ~ \hfill\insertshorttitle}

\setbeamerfont{page number in head/foot}{size=\tiny}
\setbeamercolor{footline}{fg=utblack}
